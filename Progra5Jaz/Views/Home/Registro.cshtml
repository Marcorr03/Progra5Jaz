
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Luxury Dreams</title>
    <!-- Enlace a Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Lobster&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/CSS/style.css">
</head>
<body>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
     var texto = '@ViewBag.Message';
     var icono= '@ViewBag.icono';
      if (texto) {
          Swal.fire({
              title: texto,
              text: "Click para continuar",
              icon: icono,
              //confirmButtonColor: '#3085d6',  // Color del botón de confirmación
              //cancelButtonColor: '#d33',      // Color del botón de cancelación (si es aplicable)
              //confirmButtonText: 'Aceptar',   // Texto del botón de confirmación
              customClass: {
                  confirmButton: 'Dorado'
              }
          });
      }
    </script>


    <!-- Encabezado -->
    <div class="jumbotron  text-center height=10px ">
        <h1 class="display-4 " style="font-style: 'Lobster', cursive; ">Bienvenido a Luxury Dreams</h1>
        <p class="lead DoradoL" style="font-size: 22px;">Un lugar para relajarte y llenarte de vida y salud.</p>
        <hr class="my-4">
    </div>

    <div>
        <img src="~/IMA/spa2.jpg" alt="">
        <!-- FORM -->
        <form class="Contactenos" method="post" action="~/Home/Registro">
            <div class="container mt-5 transparente " style=" width: 50%; background-color: rgba(141, 138, 116, 0.5); color: rgb(209, 187, 127);">
                <h2 class="text-center mb-4">Registro</h2>

                <div class="mb-3">
                    <label for="Identificacion" class="form-label">Identificacion</label>
                    <input type="text" class="form-control" id="Identificacion" name="Identificacion" placeholder="301230567" required>
                </div>

                <div class="mb-3">
                    <label for="nombre" class="form-label">Nombre completo</label>
                    <input type="text" class="form-control" id="Nombre" name="Nombre" placeholder="Ingresa tu nombre" required>
                </div>

                <div class="mb-3">
                    <label for="telefono" class="form-label">Fecha Nacimiento</label>
                    <input type="date" class="form-control" id="FechaNa" name="FechaNa" placeholder="05/12/1999" required>
                </div>

                <div class="mb-3">
                    <label for="email" class="form-label">Correo electrónico</label>
                    <input type="email" class="form-control" id="Correo" name="Correo" placeholder="nombre@ejemplo.com" required>
                </div>

                <div class="mb-3">
                    <label for="telefono" class="form-label">Número de teléfono</label>
                    <input type="text" class="form-control" id="Telefono" name="Telefono" placeholder="85678900" required>
                </div>


                <div class="mb-3">
                    <label for="Contrasena" class="form-label">Contraseña</label>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="basic-addon1">
                                <svg class="input-icon" xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16">
                                    <path d="M8 1a2 2 0 0 1 2 2v4H6V3a2 2 0 0 1 2-2zm3 6V3a3 3 0 0 0-6 0v4a2 2 0 0 0-2 2v5a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V9a2 2 0 0 0-2-2z"></path>
                                </svg>
                            </span>
                        </div>
                        <input type="password" class="form-control" id="Contrasena" name="Contrasena" rows="4" placeholder="Escribe tu contraseña" required aria-describedby="basic-addon1" title="La contraseña debe tener entre 14 y 20 caracteres, incluyendo al menos 4 letras mayúsculas, 4 letras minúsculas, 4 números y 2 caracteres especiales.">
                    </div>
                </div>


                <div class="buttons-container" id="condicion" style="display: none;">
                    <div id="checklist">
                        <div>
                            <input value="1" name="r" type="checkbox" id="01" disabled>
                            <label for="01">14 - 20 caracteres.</label>
                        </div>
                        <div>
                            <input value="2" name="r" type="checkbox" id="02" disabled>
                            <label for="02">Minimo 4 letras minúsculas.</label>
                        </div>
                        <div>
                            <input value="3" name="r" type="checkbox" id="03" disabled>
                            <label for="03">Minimo 4 letras mayúsculas.</label>
                        </div>
                        <div>
                            <input value="4" name="r" type="checkbox" id="04" disabled>
                            <label for="04">Caracteres especiales (%,$,&,#,*,?).</label>
                        </div>
                        <div>
                            <input value="5" name="r" type="checkbox" id="05" disabled>
                            <label for="05">Minimo 4 números.</label>
                        </div>
                    </div>
                </div>


                <div class="mb-3">
                    <label><span>Confirmar Clave</span></label>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="basic-addon1">
                                <svg class="input-icon" xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16">
                                    <path d="M8 1a2 2 0 0 1 2 2v4H6V3a2 2 0 0 1 2-2zm3 6V3a3 3 0 0 0-6 0v4a2 2 0 0 0-2 2v5a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V9a2 2 0 0 0-2-2z"></path>
                                </svg>
                            </span>
                        </div>
                        <input class="form-control" type="password" id="concontrasena" name="concontrasena" placeholder="Confirma tu contraseña" required="">
                    </div>


                    <p class="message">Vigencia de contraseña</p>

                    <div class="mb-3">
                        <div class="radio-input">
                            <div>
                                <input type="radio" id="value-1" name="value-radio" value="value-1" checked />
                                <label class="label" for="value-1">1 mes</label>
                            </div>

                            <div>
                                <input type="radio" id="value-2" name="value-radio" value="value-2" />
                                <label class="label" for="value-2">3 meses</label>
                            </div>
                            <div>
                                <input type="radio" id="value-3" name="value-radio" value="value-3" />
                                <label class="label" for="value-3">5 meses</label>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label"><span>Palabra Clave</span></label>
                        <input class="form-control" type="password" id="PalabraClave" name="PalabraClave" placeholder="Escribe una palabra clave de recuperaciòn " required="">
                    </div>

                    <div class="mb-3">
                        <label class="form-label"><span>Paìs</span></label>
                        <select id="Pais" class="form-control" name="Pais" for="Pais" required placeholder=""><option>Seleccione un Pais</option></select>
                    </div>

                    <div class="mb-3">
                        <label class="form-label"><span>Provincia</span></label>
                        <select id="Provincia" class="form-control" name="Provincia" for="Provincia" required placeholder=""><option>Seleccione una Provincia</option></select>
                    </div>

                    <div class="mb-3">
                        <label class="form-label"><span>Canton</span></label>
                        <select id="Canton" class="form-control" name="Canton" for="Canton" required placeholder=""><option>Seleccione un Canton</option></select>
                    </div>

                    <div class="mb-3">
                        <label class="form-label"><span>Distrito</span></label>
                        <select id="Distrito" class="form-control" name="Distrito" for="Distrito" required placeholder=""><option>Seleccione un Distrito</option></select>
                    </div>


                    <br />
                    <br />
                    <br />
                    <div style="display:flex">
                        <button type="submit" class="Dorado" name="Registrar" value="Registrar">Registrar</button>
                    </div>
                </div>
                <div class="Tabla">
                    <table>
                    </table>
                </div>

        </form>
    </div>

    <!-- Footer -->
    <footer class="text-center mt-4 Dorado">
        <p style="padding-bottom: 0%;">&copy; 2024 Luxury Dreams. Desarrollado por Jazmin Masis V. Todos los derechos reservados.</p>
    </footer>

    <!-- Enlace a Bootstrap JS y dependencias de JavaScript -->
    <script src="~/JS/LOGIN.js"></script>
    <script src="~/JS/index.js"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>

