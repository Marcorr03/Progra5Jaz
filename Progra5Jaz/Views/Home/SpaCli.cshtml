@using System.Data;
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Luxury Dreams</title>
    <!-- Enlace a Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Lobster&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/CSS/style.css">
</head>
<body>


    <!-- Barra de navegación -->
    <nav class="navbar navbar-expand-lg" style="background-color: #000000;">
        <img class="LOGO" src="~/IMG/logo.jpeg" alt="">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="neon-effect Dorado" href="~/Home/Menu">Home</a>
                </li>
                <li class="nav-item">
                    <a class="neon-effect Dorado " href="~/Home/Nosotros">Sobre Nosotros</a>
                </li>
                <li class="nav-item">
                    <a class="neon-effect Dorado" href="servicios.html">Servicios</a>
                    <ul class="inactive"><li><a href="~/Home/SpaCli">SPA</a></li> <li><a href="~/Home/EsteticaCli">ESTETICA</a></li><li><a href="~/Home/ManPedCli">MANICURE & PEDICURE</a></li></ul>
                </li>
                <li class="nav-item">
                    <a class="neon-effect Dorado" href="~/Home/Reservas">Reservas</a>
                    <ul class="inactive"><li><a href="">SPA</a></li> <li><a href="">ESTETICA</a></li><li><a href="">MANICURE & PEDICURE</a></li></ul>
                </li>
                <li class="nav-item">
                    <a class="neon-effect Dorado" href="~/Home/Contactenos">Contactenos</a>
                </li>
            </ul>
        </div>
        <a href="#" class="btn btn-carrito" style="border-radius: 30px;"><img src="~/IMA/menu.png" alt=""></a>
    </nav>

    <!-- Encabezado -->
    <div class="jumbotron  text-center  ">
        <h1 class="display-4 " style="font-family: 'Lobster', cursive; ">Bienvenido a Luxury Dreams</h1>
        <p class="lead DoradoL" style="font-size: 22px;">Un lugar para relajarte y llenarte de vida y salud.</p>
        <hr class="my-4">
    </div>

    <!-- Grid de contenido -->
    <div class="container">
        <p class="card-title DoradoL" style="font-size: 30px; text-align: center;">Servicios Spa</p>
        <div class="row">
            @if (ViewBag.Spa != null)
            {
                foreach (DataRow row in ViewBag.Spa.Rows)
                {
                    <div class="card">
                        <img src="@row["ImagenDataUrl"]" class="card-img-top" alt="...">
                        <div class="card-body">
                            <div style="">
                                <h5 class="card-title">@row["Nombre"]</h5>
                                <p>@row["Descripcion"]</p>
                                <h6>Precio: @row["Precio"]/p</h6>
                                <div style=" display:flex;">
                                    <img src="~/IMG/agen.png" class="agregar" alt="">
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <p>No hay servicios</p>
            }
        </div>
    </div>
    <br />
    <br />
    <br />
    <br />
    <br />

    <!-- Footer -->
    <footer class="footer">
        <p style="padding-bottom: 0%;">&copy; 2024 Luxury Dreams. Desarrollado por Jazmin Masis V. Todos los derechos reservados.</p>
    </footer>

    <!-- Enlace a Bootstrap JS y dependencias de JavaScript -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>

